<?xml version="1.0" encoding="utf-8"?>


<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="120dp"
            android:layout_marginHorizontal="0dp"
            map:layout_constraintTop_toBottomOf="@id/destText"
            map:layout_constraintBottom_toBottomOf="parent"
            map:layout_constraintEnd_toEndOf="parent"
            map:layout_constraintStart_toStartOf="parent"
            tools:context=".MapsActivity"
            tools:layout="@layout/activity_maps" >
        </androidx.fragment.app.FragmentContainerView>
<!--following section is for search bars-->

        <fragment
            android:id="@+id/originText"
            android:layout_width="match_parent"
            android:layout_marginTop="8dp"
            android:layout_marginRight="50dp"
            android:layout_marginEnd="50dp"
            android:scrollHorizontally="true"
            android:layout_height="50dp"
            android:ellipsize="start"
            android:background="@drawable/search1"
            android:paddingLeft="50dp"
            android:paddingRight="50dp"
            android:gravity="center_vertical"
            map:layout_constraintEnd_toEndOf="parent"
            map:layout_constraintStart_toStartOf="parent"
            map:layout_constraintTop_toTopOf="parent"
            map:layout_constraintBottom_toTopOf="@id/destText"
            android:typeface="monospace"
            android:name="com.google.android.libraries.places.widget.AutocompleteSupportFragment"/>

        <fragment
            android:id="@+id/destText"
            android:layout_width="match_parent"
            android:layout_marginTop="8dp"
            android:layout_marginRight="50dp"
            android:layout_marginEnd="50dp"
            android:scrollHorizontally="true"
            android:layout_height="50dp"
            android:ellipsize="start"
            android:background="@drawable/search2"
            android:paddingLeft="50dp"
            android:paddingRight="50dp"
            android:gravity="center_vertical"
            map:layout_constraintEnd_toEndOf="parent"
            map:layout_constraintStart_toStartOf="parent"
            map:layout_constraintTop_toBottomOf="@+id/originText"
            android:typeface="monospace"
            android:name="com.google.android.libraries.places.widget.AutocompleteSupportFragment" />

        <ImageButton
            android:id="@+id/showStart"
            android:layout_width="50dp"
            android:layout_height="50dp"
            map:layout_constraintBottom_toBottomOf="@+id/originText"
            map:layout_constraintLeft_toLeftOf="@id/originText"
            map:layout_constraintTop_toTopOf="@+id/originText"
            android:background="@null"
            android:src="@null"/>

        <ImageButton
            android:id="@+id/showEnd"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@null"
            android:src="@null"
            map:layout_constraintBottom_toBottomOf="@+id/destText"
            map:layout_constraintStart_toStartOf="@+id/destText"
            map:layout_constraintTop_toTopOf="@+id/destText" />

        <ImageButton
            android:id="@+id/searchRoute"
            android:layout_width="50dp"
            android:layout_height="100dp"
            android:background="@drawable/buttonborder2"
            android:src="@drawable/directions_icon"
            map:layout_constraintBottom_toBottomOf="@+id/destText"
            map:layout_constraintEnd_toEndOf="parent"
            map:layout_constraintStart_toEndOf="@+id/destText"
            map:layout_constraintTop_toTopOf="@+id/originText"
            tools:ignore="VectorDrawableCompat" />


<!--section bellow is for buttons in the map-->
        <ImageButton
            android:id="@+id/menuButton"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginBottom="2dp"
            android:background="@null"
            android:scaleType="fitCenter"
            android:src="@drawable/menu"
            map:layout_constraintBottom_toBottomOf="@+id/map"
            map:layout_constraintStart_toStartOf="@+id/map"
            tools:ignore="ContentDescription" />

        <ImageButton
            android:id="@+id/weatherButton"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@null"
            android:scaleType="fitCenter"
            android:src="@drawable/weatherbtn"
            map:layout_constraintEnd_toEndOf="parent"
            map:layout_constraintTop_toTopOf="@+id/map"
            tools:ignore="ContentDescription" />

        <ImageButton
            android:id="@+id/locationButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:src="@drawable/location_button"
            android:background="@null"
            map:layout_constraintBottom_toBottomOf="@+id/map"
            map:layout_constraintEnd_toEndOf="@+id/map"
            tools:ignore="ContentDescription,VectorDrawableCompat" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity='left'
        map:menu="@menu/menu_layout"
        tools:ignore="RtlHardcoded" />

</androidx.drawerlayout.widget.DrawerLayout>